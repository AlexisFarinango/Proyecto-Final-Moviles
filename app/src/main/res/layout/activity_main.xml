<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Contenedor para el círculo y el logo -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_circular"
        android:layout_marginBottom="20dp"/>

    <!-- Título con el birrete -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Pantalla 1"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Texto Lorem ipsum -->
    <TextView
        android:id="@+id/infoText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. In venenatis tincidunt id magna et placerat tincidunt est."
        android:textAlignment="center"
        android:layout_marginBottom="30dp"/>

    <!-- Botón de navegación -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/navigateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a la Vista AR"/>

    <!-- Indicadores de página -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_selected"
            android:layout_margin="4dp"/>

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_unselected"
            android:layout_margin="4dp"/>

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/dot_unselected"
            android:layout_margin="4dp"/>
    </LinearLayout>

</LinearLayout>
